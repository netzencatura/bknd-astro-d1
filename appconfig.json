  "auth": {
    "enabled": true,
    "basepath": "/api/auth",
    "entity_name": "users",
    "allow_register": true,
    "jwt": {
      "secret": "",
      "alg": "HS256",
      "expires": 0,
      "issuer": "bkndastro",
      "fields": [
        "id",
        "email",
        "role"
      ]
    },
    "cookie": {
      "path": "/",
      "sameSite": "lax",
      "secure": true,
      "httpOnly": true,
      "expires": 604800,
      "partitioned": false,
      "renew": true,
      "pathSuccess": "/",
      "pathLoggedOut": "/"
    },
    "strategies": {
      "password": {
        "enabled": true,
        "type": "password",
        "config": {
          "hashing": "sha256"
        }
      }
    },
    "guard": {
      "enabled": false
    },
    "roles": {
      "admin": {
        "permissions": [
          "data.database.sync",
          "data.entity.read",
          "data.raw.query",
          "auth.user.password.change",
          "auth.user.password.test",
          "media.file.delete",
          "media.file.upload",
          "system.access.admin",
          "system.config.read",
          "system.mcp",
          "system.schema.read",
          "system.config.read.secrets",
          "system.access.api",
          "media.file.list",
          "auth.user.token.create",
          "data.entity.update",
          "data.entity.create",
          "data.entity.delete",
          "data.raw.mutate",
          "auth.user.create",
          "media.file.read",
          "system.build",
          "system.config.write"
        ],
        "implicit_allow": true
      },
      "editor": {
        "permissions": [
          "system.access.api",
          "media.file.read",
          "media.file.upload",
          "media.file.delete",
          "data.entity.read",
          "data.entity.create",
          "data.entity.update",
          "data.entity.delete"
        ]
      }
    }
  },
  "media": {
