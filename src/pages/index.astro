---
import { getApi } from "../bknd";
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";

// Krok 1: Změníme "todos" na "pages"
const api = await getApi(Astro);
const { data } = await api.data.readMany("pages");
---

<Layout title="Welcome to Astro.">
  <p slot="context">Static Rendering</p>
  <ul role="list" class="link-card-grid">
    {
      // Krok 2: Projdeme data a proměnnou přejmenujeme na "page" pro přehlednost
      data.map((page: any) => (
        // Krok 3: Upravíme vlastnosti pro Card komponentu
        // Použijeme data z přeložitelných polí (zde českou verzi .cz)
        <Card title={page.title} body={page.content} />
      ))
    }
  </ul>
</Layout>

<style>
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>